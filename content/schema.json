{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Application": {
            "allOf": [
                {
                    "properties": {
                        "comment": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name"
                    ],
                    "type": "object"
                },
                {
                    "properties": {
                        "type": {
                            "const": "application",
                            "type": "string"
                        }
                    },
                    "required": [
                        "type"
                    ],
                    "type": "object"
                }
            ]
        },
        "Audio": {
            "allOf": [
                {
                    "properties": {
                        "comment": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name"
                    ],
                    "type": "object"
                },
                {
                    "properties": {
                        "type": {
                            "const": "audio",
                            "type": "string"
                        }
                    },
                    "required": [
                        "type"
                    ],
                    "type": "object"
                }
            ]
        },
        "Document": {
            "allOf": [
                {
                    "properties": {
                        "comment": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name"
                    ],
                    "type": "object"
                },
                {
                    "properties": {
                        "type": {
                            "const": "document",
                            "type": "string"
                        }
                    },
                    "required": [
                        "type"
                    ],
                    "type": "object"
                }
            ]
        },
        "Files": {
            "anyOf": [
                {
                    "$ref": "#/definitions/Application"
                },
                {
                    "$ref": "#/definitions/Video"
                },
                {
                    "$ref": "#/definitions/Audio"
                },
                {
                    "$ref": "#/definitions/Image"
                },
                {
                    "$ref": "#/definitions/Document"
                },
                {
                    "properties": {
                        "action": {
                            "const": "OPEN_WARNING",
                            "type": "string"
                        },
                        "comment": {
                            "type": "string"
                        },
                        "files": {
                            "items": {
                                "$ref": "#/definitions/Files"
                            },
                            "type": "array"
                        },
                        "name": {
                            "type": "string"
                        },
                        "obstacle": {
                            "enum": [
                                "ACCELERATED_MOUSE",
                                "GLITCHED_MOUSE",
                                "REVERSED_MOUSE",
                                "SLOWED_MOUSE"
                            ],
                            "type": "string"
                        },
                        "type": {
                            "const": "folder",
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "type"
                    ],
                    "type": "object"
                }
            ]
        },
        "Image": {
            "allOf": [
                {
                    "properties": {
                        "comment": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name"
                    ],
                    "type": "object"
                },
                {
                    "properties": {
                        "type": {
                            "const": "image",
                            "type": "string"
                        }
                    },
                    "required": [
                        "type"
                    ],
                    "type": "object"
                }
            ]
        },
        "Video": {
            "allOf": [
                {
                    "properties": {
                        "comment": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name"
                    ],
                    "type": "object"
                },
                {
                    "properties": {
                        "type": {
                            "const": "video",
                            "type": "string"
                        }
                    },
                    "required": [
                        "type"
                    ],
                    "type": "object"
                }
            ]
        }
    },
    "properties": {
        "desktop": {
            "items": {
                "$ref": "#/definitions/Files"
            },
            "type": "array"
        }
    },
    "required": [
        "desktop"
    ],
    "type": "object"
}

